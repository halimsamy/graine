{
  "name": "graine",
  "version": "1.0",
  "description": "Efficiently populating databases with hierarchical and customizable test data",
  "main": "lib/index.js",
  "types": "lib/index.d.ts",
  "scripts": {
    "build": "tsc",
    "lint": "rome check .",
    "format": "rome format . --write",
    "test": "vitest run",
    "coverage": "vitest run --coverage",
    "prepare": "npm run build",
    "prepublishOnly": "npm test && npm run lint",
    "preversion": "npm run lint",
    "version": "npm run format && git add -A src",
    "postversion": "git push && git push --tags"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/halimsamy/graine.git"
  },
  "keywords": [
    "database",
    "data",
    "seeder",
    "mysql",
    "mongo",
    "postgresql"
  ],
  "author": "Halim Samy",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/halimsamy/graine/issues"
  },
  "homepage": "https://github.com/halimsamy/graine#readme",
  "devDependencies": {
    "@faker-js/faker": "^8.0.2",
    "@vitest/coverage-c8": "^0.33.0",
    "@vitest/coverage-v8": "^0.34.4",
    "rome": "^12.1.3",
    "typescript": "^5.2.2",
    "vitest": "^0.34.4"
  }
}
